    var ads=$(".layout-banner")
var _c1 = document.getElementById('index_ad_1'), _c2 = document.getElementById('index_ad_2'), _c3 = document.getElementById('index_ad_3'), _c4 = document.getElementById('index_ad_4'), _c_c = ads.get(0), _c_n = ads.get(1), _c_is_click = false, _ad_timer, _ad_flash_render = function(){
	var _fadeRate1 = 100, _fadeRate2 = 0, _add_step=10, _minus_step=10, _idx_n = _c_c.id.split('_')[2]==ads.length?1:(~~_c_c.id.split('_')[2]+1);
	_c_n = _c_is_click?_c_n:document.getElementById('index_ad_'+_idx_n);
	setTimeout(function(){
		_fadeRate1 -= _minus_step;_fadeRate2 += _add_step;
		if (_fadeRate1>=0) {
			_c_c.style.filter = 'Alpha(opacity=' + _fadeRate1 + ')';
			_c_c.style.opacity = _fadeRate1/100;
			_c_n.style.filter = 'Alpha(opacity=' + _fadeRate2 + ')';
			_c_n.style.opacity = _fadeRate2/100;
			(_fadeRate1==_fadeRate2) && (function(){
				_c_c.style.zIndex = 99;
				_c_n.style.zIndex = 100;
				document.getElementById(_c_c.id+'_a').className = '';
				document.getElementById(_c_n.id+'_a').className = 'current';
			})();
			setTimeout(arguments.callee, 50);
		}else{
			_c_c =_c_n;_c_is_click = false;
		}
	}, 50);
	_ad_timer = setTimeout(_ad_flash_render, 6000);
}, _run_ad = function(obj){
	clearTimeout(_ad_timer);
	var _idx = _c_c.id.split('_')[2];
	document.getElementById('index_ad_'+_idx+'_a').className='';
	obj.className = 'current';
	_c_n = document.getElementById('index_ad_'+obj.id.split('_')[2]);
	_c_is_click = true;
	_ad_flash_render();
};
